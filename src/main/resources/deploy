  replicas: 1
  selector:
    matchLabels:
      app: instructserver
  template:
    metadata:
      labels:
        app: instructserver
    spec:
      containers:
        - image: vicuolia/instructorservice
          name: instructserver
          ports:
            - containerPort: 8087
              name: instructserver
